{
  "manifest_version": 2,
  "name": "Play Extension",
  "version": "0.1",
  "description": "simple extension",
  "browser_action": {
    "default_icon": "icon-16.png"
  },
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "content_scripts": [{
   "matches": ["<all_urls>"],
   "js": ["content.js"],
   "run_at": "document_idle"
  }],
  "background": {
    "scripts": ["event.js"]
  },
  "permissions": [
    "storage",
    "tabs"
  ]
}
